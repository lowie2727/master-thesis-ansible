# ls
alias ls='exa -alg --color=always --group-directories-first'
alias la='exa -ag --color=always --group-directories-first'
alias ll='exa -lg --color=always --group-directories-first'
alias lt='exa -Tg --color=always --group-directories-first'

# git
alias addall='git add .'
alias branch='git branch'
alias checkout='git checkout'
alias commit='git commit -m'
alias amend='git commit --amend'
alias fetch='git fetch'
alias pull='git pull origin'
alias push='git push origin'
alias gs='git status'
alias glog='git log --graph --decorate --oneline'
